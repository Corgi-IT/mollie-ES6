{
    "parserOptions" : {
        "ecmaVersion": "6",
        "sourceType": "module"
    },
    "env": {
        "browser": true,
        "node": true,
        "amd": true
    },
    "rules": {
        "indent": [
            2,
            4,
            {
                "VariableDeclarator": 2
            }
        ],
        "quotes": [
            2,
            "single",
            "avoid-escape"
        ],
        "camelcase": 0,
        "func-style": [
            2,
            "declaration"
        ],
        "global-require": 0,
        "max-statements": [
            2,
            20
        ],
        "max-len": [
            2,
            120,
            4
        ]
    }
}
